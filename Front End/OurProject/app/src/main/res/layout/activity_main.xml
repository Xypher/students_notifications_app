<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <!-- password -->
    <EditText
        android:id="@+id/T_Password"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/T_email"
        android:layout_alignStart="@+id/T_email"
        android:layout_alignEnd="@+id/T_email"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Password"
        android:background="@drawable/custom_input"
        android:layout_marginEnd="0dp"
        android:drawableStart="@drawable/ic_lock"
        android:ems="10"
        android:inputType="textPassword" />

    <!-- user name -->
    <EditText
        android:id="@+id/T_email"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="User name"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/ic_email"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <!-- Button -->
    <Button
        android:id="@+id/Log_in"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/T_Password"
        android:layout_alignEnd="@+id/T_Password"
        android:layout_alignBottom="@+id/T_Password"
        android:layout_marginStart="59dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="-109dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <!-- Sign Up -->
    <Button
        android:id="@+id/sign_up"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/Log_in"
        android:layout_alignBottom="@+id/Log_in"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="-51dp"
        android:text="Sign Up ?"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>